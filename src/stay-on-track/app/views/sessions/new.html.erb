<% provide(:title, "Log in") %>

<h2> Log In </h2>

<div class="user-form">
    <%= form_with(url: login_path, scope: :session) do |f| %>
        <div class="form-group">
            <%= f.label :email %>
            <%= f.email_field :email %>
        </div>

        <div class="form-group">
            <%= f.label :password %>
            <%= f.password_field :password %>
        </div>
      
        <%= f.submit "Log in", class: "button" %>
        
        <p> New user? <%= link_to "Sign up here", signup_path %> </p>
    <% end %>
</div>