<h2>Edit Account</h2>

<div class="user-form">
  <%= form_with(model: current_user, url: account_path, method: :patch, local: true) do |form| %>
    <div class="form-group">
      <%= form.label :name, "Display Name" %>
      <%= form.text_field :name, class: "form-control" %>
    </div>

    <div class="form-group">
      <%= form.label :email, "Display Email" %>
      <%= form.email_field :email, class: "form-control" %>
    </div>

     <div class="form-group">
            <%= form.label :password %>
            <%= form.password_field :password %>
      </div>

      <div class="form-group">
          <%= form.label :password_confirmation, "Confirmation" %>
          <%= form.password_field :password_confirmation %>
      </div>

    <div class="form-actions">
      <%= form.submit "Update Account", class: "button" %>
    </div>

  <% end %>

  <% if @user.errors.any? %>
  <div class="alert alert-danger">
    <h4>There were problems updating your account:</h4>
    <ul>
      <% @user.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
    </ul>
  </div>
<% end %>

</div>
